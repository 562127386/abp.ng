{
  "$schema": "http://json-schema.org/schema",
  "id": "application",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "directory": {
        "description": "The directory of the new application.",
        "type": "string",
        "default": "backend"
      }
    }
  },
  "required": ["name"]
}
